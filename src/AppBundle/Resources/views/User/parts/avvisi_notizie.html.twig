<div class="panel panel-primary no-border-radius">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'user.dashboard.avvisi_notizie'|trans }}</h3>
    </div>
    <div class="panel-body">
        <ul class="list-unstyled list-news" id="news">
        </ul>
    </div>
</div>

{% verbatim %}
<script id="tpl-news-spinner" type="text/x-jsrender">
<li style="padding:50px;text-align:center">
    <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
    <span class="sr-only">Loading...</span>
</div>
</script>
<script id="tpl-news" type="text/x-jsrender">
    <li class="clearfix">
        <div class="date">
            <span class="month">{{:month}}</span>
            <span class="day">{{:day}}</span>
            <span class="year">{{:year}}</span>
        </div>
        <a href="{{:link}}" target="_blank" class="small">
            <small>{{:site_name}}</small>
            <br />{{:title}}
        </a>
        <p class="text-faded small">
            {{:summary}}
        </p>
    </li>
</script>
<script id="tpl-news-empty" type="text/x-jsrender">
<li style="padding:50px;text-align:center">...</li>
</script>

{% endverbatim %}
